<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Here is old-style Fragment" />

    <Button
        android:id="@+id/btShowSecondActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#ffc5cae9"
        android:text="Show second Activity" />

    <Button
        android:id="@+id/btRequestLocationPermission"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Request location permission" />
</LinearLayout>