<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/bt00"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show second Activity" />

    <Button
        android:id="@+id/bt01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show second Activity (Vanilla)" />

    <Button
        android:id="@+id/bt02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show second Activity (Custom Result)" />

    <Button
        android:id="@+id/bt03"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Request location permission" />

    <Button
        android:id="@+id/bt04"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Request location permission (Vanilla)" />

    <Button
        android:id="@+id/bt05"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Take pic" />

    <Button
        android:id="@+id/bt06"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pick an image" />

    <Button
        android:id="@+id/bt07"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#ff81d4fa"
        android:text="Show fragment Sample" />

    <Button
        android:id="@+id/bt08"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#FF81D4FA"
        android:text="Go Detail Setting" />

</LinearLayout>